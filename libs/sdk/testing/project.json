{
  "name": "testing",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/sdk/testing/src",
  "prefix": "sky",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/sdk/testing"],
      "options": {
        "project": "libs/sdk/testing/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/sdk/testing/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/sdk/testing/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "dependsOn": ["test-integration"],
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "libs/sdk/testing/tsconfig.spec.json",
        "karmaConfig": "libs/sdk/testing/karma.conf.js",
        "styles": [
          "libs/components/theme/src/lib/styles/sky.scss",
          "libs/components/theme/src/lib/styles/themes/modern/styles.scss"
        ],
        "codeCoverage": true,
        "codeCoverageExclude": ["**/fixtures/**"],
        "polyfills": [
          "zone.js",
          "zone.js/testing",
          "libs/components/packages/src/polyfills.js"
        ],
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["{workspaceRoot}"]
        }
      },
      "configurations": {
        "ci": {
          "browsers": "ChromeHeadlessNoSandbox",
          "codeCoverage": true,
          "progress": false,
          "sourceMap": true,
          "watch": false
        }
      }
    },
    "test-integration": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest run --config libs/sdk/testing/vitest/vitest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.ts",
          "{projectRoot}/src/**/*.html"
        ]
      }
    }
  },
  "tags": ["sdk", "npm"]
}
