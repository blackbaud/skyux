{
  "name": "testing-private",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/sdk/testing/private/src",
  "prefix": "sky",
  "tags": ["testing"],
  "targets": {
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "libs/sdk/testing/private/tsconfig.spec.json",
        "karmaConfig": "libs/sdk/testing/private/karma.conf.js",
        "codeCoverage": true,
        "codeCoverageExclude": ["**/fixtures/**"],
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["{workspaceRoot}"]
        }
      },
      "configurations": {
        "ci": {
          "browsers": "ChromeHeadlessNoSandbox",
          "codeCoverage": true,
          "progress": false,
          "sourceMap": true,
          "watch": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/src/**/*.ts"]
      }
    }
  }
}
