<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Preview for PR <%=prNumber%></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
  *, *::before, *::after {
    box-sizing: border-box;
  }
  html {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    background-color: #fff;
    color: #333;
    line-height: 1.6;
    padding: 20px;
  }
  </style>
</head>
<body>

<h1>Preview build for <a href="<%= repoUrl %>/pull/<%=prNumber%>">PR #<%=prNumber%></a></h1>

<% if (!skipCompositeStorybook) { %>
<p><a href="<%= url %>/<%=pr%>/storybook/">Storybook preview</a></p>
<% } %>
<p>Component Storybooks:</p>
<ul>
<% if (storybooks.length > 0) {
storybooks.forEach(function(storybook){ %>
  <li><a href="<%= url %>/<%=pr%>/storybooks/<%=storybook%>/"><%=storybook%></a></li><% })
} else { %>
  <li><em>(no component storybooks affected in this pr</em></li><%
} %>
</ul>
<% if (apps.length > 0) { %>

<p>Apps:</p>
<ul>
<% apps.forEach(function(app){ %>
  <li><a href="<%= url %>/<%=pr%>/<%=app%>/"><%=app%></a></li><% })
%>
</ul>
<% } %>
</body>
</html>
