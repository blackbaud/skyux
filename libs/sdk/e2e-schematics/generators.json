{
  "$schema": "http://json-schema.org/schema",
  "name": "e2e-schematics",
  "version": "1.0.0",
  "generators": {
    "component-e2e": {
      "factory": "./src/generators/component-e2e/index",
      "schema": "./src/generators/component-e2e/schema.json",
      "description": "configure a library for e2e testing"
    },
    "configure-percy": {
      "factory": "./src/generators/configure-percy/index",
      "schema": "./src/generators/configure-percy/schema.json",
      "description": "configure a cypress e2e project to use percy"
    },
    "configure-storybook": {
      "factory": "./src/generators/configure-storybook/index",
      "schema": "./src/generators/configure-storybook/schema.json",
      "description": "configure storybook"
    },
    "storybook-composition": {
      "factory": "./src/generators/storybook-composition/index",
      "schema": "./src/generators/storybook-composition/schema.json",
      "description": "generate storybook composition from a set of projects"
    },
    "story": {
      "factory": "./src/generators/story/index",
      "schema": "./src/generators/story/schema.json",
      "description": "add a new story to storybook project"
    },
    "pr-comment": {
      "factory": "./src/generators/pr-comment/generator",
      "schema": "./src/generators/pr-comment/schema.json",
      "description": "pr-comment generator"
    }
  }
}
