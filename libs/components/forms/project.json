{
  "name": "forms",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/components/forms/src",
  "prefix": "sky",
  "tags": ["component", "npm"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/components/forms"],
      "options": {
        "project": "libs/components/forms/ng-package.json",
        "tsConfig": "libs/components/forms/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/components/forms/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production",
      "dependsOn": [
        "^build",
        {
          "projects": [
            "core",
            "help-inline",
            "icon",
            "indicators",
            "popovers",
            "testing"
          ],
          "target": "build"
        }
      ],
      "inputs": [
        "buildInputs",
        "^buildInputs",
        "{workspaceRoot}/libs/components/forms/testing/src/**/*",
        "!{workspaceRoot}/libs/components/forms/testing/src/**/*.spec.ts",
        "!{workspaceRoot}/libs/components/forms/testing/src/**/fixtures/**/*"
      ]
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "libs/components/forms/tsconfig.spec.json",
        "karmaConfig": "libs/components/forms/karma.conf.js",
        "styles": [
          "libs/components/theme/src/lib/styles/sky.scss",
          "libs/components/theme/src/lib/styles/themes/modern/styles.scss"
        ],
        "codeCoverage": true,
        "codeCoverageExclude": ["**/fixtures/**"],
        "polyfills": [
          "zone.js",
          "zone.js/testing",
          "libs/components/packages/src/polyfills.js"
        ],
        "inlineStyleLanguage": "scss",
        "stylePreprocessorOptions": {
          "includePaths": ["{workspaceRoot}"]
        }
      },
      "configurations": {
        "ci": {
          "browsers": "ChromeHeadlessNoSandbox",
          "codeCoverage": true,
          "progress": false,
          "sourceMap": true,
          "watch": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.ts",
          "{projectRoot}/src/**/*.html"
        ]
      }
    }
  }
}
