{
  "name": "skyux",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/components/skyux/src",
  "prefix": "sky",
  "tags": ["component", "npm"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/libs/components/skyux"],
      "options": {
        "project": "libs/components/skyux/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/components/skyux/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/components/skyux/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.html"]
      }
    }
  }
}
