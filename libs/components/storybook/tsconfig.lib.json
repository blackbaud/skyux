{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "include": ["**/*.ts"]
}
